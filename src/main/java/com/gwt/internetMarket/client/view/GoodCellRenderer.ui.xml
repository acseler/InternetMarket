<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="name" type="java.lang.String"/>
    <ui:with field="price" type="java.lang.String"/>
    <ui:with field="description" type="java.lang.String"/>
    <ui:with field="image" type="java.lang.String"/>

    <div>
        <div>
            <img src="/img/{image}"/>
        </div>
        <div>
            <p><ui:text from='{name}'/></p>
            <p><ui:text from='{price}'/></p>
            <p><ui:text from='{description}'/></p>
        </div>
    </div>
</ui:UiBinder>